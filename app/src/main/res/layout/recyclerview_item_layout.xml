<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="4dp">

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_sl_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="2"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:paddingStart="4dp"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_doc_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="6"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="5"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_uom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="5"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_coat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_mill_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_cust_part_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="13"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_batch_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="6"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_net_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_gross_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/recyclerview_item_layout_tv_pcs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />


</LinearLayout>