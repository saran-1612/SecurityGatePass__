<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingVertical="4dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="2"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Sl.No"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="6"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="DocNum"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Status"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Item Code"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="5"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Description"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Size"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="UOM"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="5"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Specification"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="Coat"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="MillCode"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="13"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="CustPartNo"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="6"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="BATCHNUM"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="NetWT"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="4"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="GROSSWT"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:ems="3"
        android:fontFamily="@font/poppins_medium"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="PCS"
        android:textAlignment="textEnd"
        android:textColor="#181C32"
        android:textSize="12sp" />


</LinearLayout>